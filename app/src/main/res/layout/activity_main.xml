<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090909"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btNew"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:background="#75676767"
        android:text="NEW"
        android:textAlignment="center"
        android:textColor="#FDFCFC"
        android:textSize="20sp"
        app:backgroundTint="#3C3B3B"
        app:layout_constraintEnd_toStartOf="@+id/txtTimerDigits"
        app:layout_constraintTop_toTopOf="@+id/txtTimerDigits" />

    <ImageButton
        android:id="@+id/btPlayer1Down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/txtPlayer1Games"
        app:layout_constraintStart_toEndOf="@+id/txtPlayer1Games"
        app:srcCompat="@drawable/ic_arrow_down_nilo" />

    <ImageView
        android:id="@+id/imgPlayer2ServArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toStartOf="@+id/txtPlayer2Games"
        app:layout_constraintTop_toTopOf="@+id/txtPlayer2Games"
        app:srcCompat="@drawable/ic_arrow_right_nilo"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/txtPlayer1Name"
        android:layout_width="108dp"
        android:layout_height="47dp"
        android:layout_marginBottom="6dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="8"
        android:text=" Name 1"
        android:textColor="#FBFBFB"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtPlayer1"
        app:layout_constraintStart_toStartOf="@+id/txtPlayer1" />

    <TextView
        android:id="@+id/txtPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:clickable="false"
        android:fontFamily="sans-serif-black"
        android:text="PLAYER 1"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtPlayer1Games"
        app:layout_constraintEnd_toStartOf="@+id/txtPlayer1Games" />

    <TextView
        android:id="@+id/txtPlayer1Games"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="148dp"
        android:clickable="false"
        android:fontFamily="@font/e1234"
        android:text="00"
        android:textColor="#5DFF63"
        android:textSize="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPlayer1Set1"
        android:layout_width="48dp"
        android:layout_height="64dp"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:clickable="false"
        android:fontFamily="@font/e1234"
        android:text="0"
        android:textColor="#5DFF63"
        android:textSize="60dp"
        app:layout_constraintStart_toEndOf="@+id/txtPlayer1Games"
        app:layout_constraintTop_toTopOf="@+id/txtPlayer1Games" />

    <TextView
        android:id="@+id/txtPlayer1Set2"
        android:layout_width="48dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:clickable="false"
        android:fontFamily="@font/e1234"
        android:text="0"
        android:textColor="#5DFF63"
        android:textSize="60dp"
        app:layout_constraintStart_toEndOf="@+id/txtPlayer1Set1"
        app:layout_constraintTop_toTopOf="@+id/txtPlayer1Set1" />

    <TextView
        android:id="@+id/txtPlayer1Set3"
        android:layout_width="48dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:clickable="false"
        android:fontFamily="@font/e1234"
        android:text="0"
        android:textColor="#5DFF63"
        android:textSize="60dp"
        app:layout_constraintStart_toEndOf="@+id/txtPlayer1Set2"
        app:layout_constraintTop_toTopOf="@+id/txtPlayer1Set2" />

    <EditText
        android:id="@+id/txtPlayer2Name"
        android:layout_width="108dp"
        android:layout_height="47dp"
        android:layout_marginBottom="6dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="8"
        android:text=" Name 2"
        android:textColor="#FBFBFB"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtPlayer2"
        app:layout_constraintStart_toStartOf="@+id/txtPlayer2" />

    <TextView
        android:id="@+id/txtPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="PLAYER 2"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtPlayer2Games"
        app:layout_constraintStart_toStartOf="@+id/txtPlayer1" />

    <TextView
        android:id="@+id/txtPlayer2Games"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="124dp"
        android:clickable="false"
        android:fontFamily="@font/e1234"
        android:text="00"
        android:textColor="#5DFF63"
        android:textSize="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtPlayer1Games" />

    <TextView
        android:id="@+id/txtPlayer2Set1"
        android:layout_width="48dp"
        android:layout_height="64dp"
        android:layout_marginStart="90dp"
        android:clickable="false"
        android:fontFamily="@font/e1234"
        android:text="0"
        android:textColor="#5DFF63"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/txtPlayer2Games"
        app:layout_constraintTop_toTopOf="@+id/txtPlayer2Games" />

    <TextView
        android:id="@+id/txtPlayer2Set2"
        android:layout_width="48dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:clickable="false"
        android:fontFamily="@font/e1234"
        android:text="0"
        android:textColor="#5DFF63"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/txtPlayer2Set1"
        app:layout_constraintTop_toTopOf="@+id/txtPlayer2Set1" />

    <TextView
        android:id="@+id/txtPlayer2Set3"
        android:layout_width="48dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:clickable="false"
        android:fontFamily="@font/e1234"
        android:text="0"
        android:textColor="#5DFF63"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/txtPlayer2Set2"
        app:layout_constraintTop_toTopOf="@+id/txtPlayer2Set2" />

    <TextView
        android:id="@+id/txtGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:fontFamily="sans-serif-black"
        android:text="GAME"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/txtPlayer1Games"
        app:layout_constraintTop_toTopOf="@+id/txtPlayer1Games" />

    <TextView
        android:id="@+id/txtSet1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:fontFamily="sans-serif-black"
        android:text="SET1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/txtGame"
        app:layout_constraintTop_toTopOf="@+id/txtGame" />

    <TextView
        android:id="@+id/txtSet2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="sans-serif-black"
        android:text="SET2"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/txtSet1"
        app:layout_constraintTop_toTopOf="@+id/txtSet1" />

    <TextView
        android:id="@+id/txtSet3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="sans-serif-black"
        android:text="SET3"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/txtSet2"
        app:layout_constraintTop_toTopOf="@+id/txtSet2" />


    <ImageButton
        android:id="@+id/btPlayer1Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@color/black"
        app:layout_constraintStart_toEndOf="@+id/txtPlayer1Games"
        app:layout_constraintTop_toTopOf="@+id/txtPlayer1Games"
        app:srcCompat="@drawable/ic_arrow_up_nilo" />

    <ImageButton
        android:id="@+id/btPlayer2Down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/txtPlayer2Games"
        app:layout_constraintStart_toEndOf="@+id/txtPlayer2Games"
        app:srcCompat="@drawable/ic_arrow_down_nilo" />

    <ImageButton
        android:id="@+id/btPlayer2Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@color/black"
        app:layout_constraintStart_toEndOf="@+id/txtPlayer2Games"
        app:layout_constraintTop_toTopOf="@+id/txtPlayer2Games"
        app:srcCompat="@drawable/ic_arrow_up_nilo" />

    <ImageButton
        android:id="@+id/btConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/stat_sys_data_bluetooth" />

    <TextView
        android:id="@+id/txtTimerDigits"
        android:layout_width="240dp"
        android:layout_height="64dp"
        android:layout_marginTop="36dp"
        android:clickable="false"
        android:fontFamily="@font/e1234"
        android:text="00:00"
        android:textColor="#5DFF63"
        android:textSize="60dp"
        app:layout_constraintStart_toStartOf="@+id/txtPlayer1Games"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btStartTimer"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:background="#75676767"
        android:text="START"
        android:textColor="#FDFCFC"
        app:backgroundTint="#3C3B3B"
        app:layout_constraintStart_toEndOf="@+id/txtTimerDigits"
        app:layout_constraintTop_toTopOf="@+id/txtTimerDigits" />

    <ImageView
        android:id="@+id/imgPlayer1ServArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toStartOf="@+id/txtPlayer1Games"
        app:layout_constraintTop_toTopOf="@+id/txtPlayer1Games"
        app:srcCompat="@drawable/ic_arrow_right_nilo" />


</android.support.constraint.ConstraintLayout>