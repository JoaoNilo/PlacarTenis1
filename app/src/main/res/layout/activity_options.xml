<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:clickable="false"
    android:visibility="visible"
    tools:context=".GameSettings">


    <Button
        android:id="@+id/bt_tabletennis"
        android:layout_width="194dp"
        android:layout_height="58dp"
        android:layout_marginTop="10dp"
        android:text="Table Tennis"
        app:layout_constraintStart_toStartOf="@+id/bt_tennis"
        app:layout_constraintTop_toBottomOf="@+id/bt_beachtennis" />

    <Button
        android:id="@+id/bt_footvolley"
        android:layout_width="194dp"
        android:layout_height="58dp"
        android:layout_marginTop="10dp"
        android:text="FootVolley"
        app:layout_constraintStart_toStartOf="@+id/bt_tennis"
        app:layout_constraintTop_toBottomOf="@+id/bt_beachvolleyball" />

    <Button
        android:id="@+id/bt_beachvolleyball"
        android:layout_width="194dp"
        android:layout_height="58dp"
        android:layout_marginTop="10dp"
        android:text="Beach Volleyball"
        app:layout_constraintStart_toStartOf="@+id/bt_tennis"
        app:layout_constraintTop_toBottomOf="@+id/bt_tabletennis" />

    <Button
        android:id="@+id/bt_beachtennis"
        android:layout_width="194dp"
        android:layout_height="58dp"
        android:layout_marginTop="10dp"
        android:text="Beach Tennis"
        app:layout_constraintStart_toStartOf="@+id/bt_tennis"
        app:layout_constraintTop_toBottomOf="@+id/bt_tennis" />

    <Button
        android:id="@+id/bt_tennis"
        android:layout_width="194dp"
        android:layout_height="58dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:text="Tennis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="291dp"
        android:layout_height="247dp"
        android:layout_marginStart="85dp"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Please select one of the options listed aside and click 'Ok' to confirm selection or 'Cancel' to return."
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/bt_tennis"
        app:layout_constraintTop_toTopOf="@+id/bt_tennis" />

    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="@+id/editTextTextMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine" />

    <Button
        android:id="@+id/bt_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="OK"
        app:layout_constraintStart_toEndOf="@+id/bt_cancel"
        app:layout_constraintTop_toTopOf="@+id/bt_cancel" />

    <Button
        android:id="@+id/bt_tweaks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Tweaks"
        app:layout_constraintStart_toEndOf="@+id/bt_ok"
        app:layout_constraintTop_toTopOf="@+id/bt_cancel" />

</android.support.constraint.ConstraintLayout>