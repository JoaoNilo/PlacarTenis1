<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="242dp"
    android:layout_height="260dp"
    android:background="@color/black">

    <TextView
        android:id="@+id/txtDisplayPoints"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        android:focusable="false"
        android:gravity="right|center_horizontal"
        android:text="00"
        android:textSize="34sp" />


    <Button
        android:id="@+id/btP15"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_below="@+id/txtDisplayPoints"
        android:layout_alignStart="@+id/txtDisplayPoints"
        android:layout_alignLeft="@+id/txtDisplayPoints"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_border_start"
        android:text="15"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btP30"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/btP15"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/btP15"
        android:layout_toRightOf="@+id/btP15"
        android:background="@drawable/btn_border_start"
        android:text="30"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btP40"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/btP30"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/btP30"
        android:layout_toRightOf="@+id/btP30"
        android:background="@drawable/btn_border_start"
        android:text="40"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btP00"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_below="@+id/btP15"
        android:layout_alignStart="@+id/btP15"
        android:layout_alignLeft="@+id/btP15"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/btn_border_start"
        android:text="00"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btPad"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/btP00"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/btP00"
        android:layout_toRightOf="@+id/btP00"
        android:background="@drawable/btn_border_start"
        android:text="Ad"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btPno"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/btPad"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/btPad"
        android:layout_toRightOf="@+id/btPad"
        android:background="@drawable/btn_border_start"
        android:text=""
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btOKPoints"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_below="@+id/btP00"
        android:layout_alignEnd="@+id/btPno"
        android:layout_alignRight="@+id/btPno"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_border_start"
        android:text="ENTER"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp" />

</RelativeLayout>